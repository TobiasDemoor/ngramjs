{
  "name": "ngramjs",
  "version": "0.1.2",
  "description": "String ngram splitter.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Kristijan Sedlak (Xpepermint) & Tobias Demoor",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "release": "commit-and-tag-version && git push origin HEAD --follow-tags --no-verify",
    "prepare": "husky",
    "pre-commit": "npm run lint && npm run format",
    "pre-push": "npm run build && npm run test"
  },
  "keywords": [
    "ngram",
    "split",
    "search",
    "tokenize",
    "tokenizer",
    "convert",
    "converter",
    "parse",
    "parser"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@swc/core": "^1.11.9",
    "@swc/jest": "^0.2.37",
    "@types/jest": "29.5.14",
    "@typescript-eslint/eslint-plugin": "8.26.1",
    "@typescript-eslint/parser": "8.26.1",
    "commit-and-tag-version": "^12.5.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^3.8.6",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-spellcheck": "^0.0.20",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "husky": "^9.1.7",
    "ts-jest": "29.2.6",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "^1.8.11",
    "tsconfig-paths": "^4.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TobiasDemoor/ngramjs"
  },
  "bugs": {
    "url": "https://github.com/TobiasDemoor/ngramjs/issues"
  },
  "homepage": "https://github.com/TobiasDemoor/ngramjs#readme",
  "files": [
    "dist/",
    "package.json",
    "tsconfig.json"
  ]
}
